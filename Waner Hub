-- Main Tab
MainTab:CreateSlider({
    Name = "‚ö° Speed Multiplier",
    Range = {1, 5},
    Increment = 0.1,
    Suffix = "x",
    CurrentValue = 1,
    Flag = "SpeedSlider",
    Callback = function(v) 
        setSpeed(v)
        if v > 1.5 then
            Rayfield:Notify({
                Title = "‚ö° Speed Increased",
                Content = "Current speed: " .. v .. "x\nBypass recommended!",
                Duration = 2,
                Image = 4483362458,
            })
        end
    end
})

