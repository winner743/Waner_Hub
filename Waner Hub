print("Step 1: Initializing...")

-- Services
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local GuiService = game:GetService("GuiService")
local TeleportService = game:GetService("TeleportService")
local player = Players.LocalPlayer

-- Auto Execute System
local function setupAutoExecute()
    local autoExecuteCode = [[
-- WANER HUB AUTO EXECUTE
loadstring(game:HttpGet("https://raw.githubusercontent.com/WanerScripts/WenerHub/main/doors.lua"))()
]]
    
    -- Save auto execute
    if not isfolder("WenerHub") then
        makefolder("WenerHub")
    end
    
    writefile("WenerHub/AutoExecute.lua", autoExecuteCode)
    
    -- Auto execute on join
    if isfile("WenerHub/AutoExecute.lua") then
        local code = readfile("WenerHub/AutoExecute.lua")
        if code and code:find("WANER HUB AUTO EXECUTE") then
            print("üîÑ Auto Execute: Script akan otomatis execute saat reconnect")
        end
    end
end

-- Disconnect Detection & Auto Reconnect System
local function setupAutoReconnect()
    local disconnectDetected = false
    
    -- Create persistent disconnect GUI
    local function createDisconnectGUI()
        local ScreenGui = Instance.new("ScreenGui")
        ScreenGui.Name = "WenerDisconnectGUI"
        ScreenGui.ResetOnSpawn = false
        ScreenGui.Parent = game.CoreGui
        
        -- Full screen background
        local Background = Instance.new("Frame")
        Background.Size = UDim2.new(1, 0, 1, 0)
        Background.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
        Background.BackgroundTransparency = 0.2
        Background.BorderSizePixel = 0
        Background.Parent = ScreenGui
        
        -- Main disconnect panel
        local DisconnectPanel = Instance.new("Frame")
        DisconnectPanel.Size = UDim2.new(0, 500, 0, 300)
        DisconnectPanel.Position = UDim2.new(0.5, -250, 0.5, -150)
        DisconnectPanel.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
        DisconnectPanel.BorderSizePixel = 0
        DisconnectPanel.Parent = ScreenGui
        
        local PanelCorner = Instance.new("UICorner")
        PanelCorner.CornerRadius = UDim.new(0, 15)
        PanelCorner.Parent = DisconnectPanel
        
        -- Gradient background
        local Gradient = Instance.new("UIGradient")
        Gradient.Color = ColorSequence.new({
            ColorSequenceKeypoint.new(0, Color3.fromRGB(139, 0, 255)),
            ColorSequenceKeypoint.new(1, Color3.fromRGB(75, 0, 130))
        })
        Gradient.Rotation = 45
        Gradient.Parent = DisconnectPanel
        
        -- Disconnect icon/title
        local Icon = Instance.new("TextLabel")
        Icon.Size = UDim2.new(1, 0, 0, 80)
        Icon.Position = UDim2.new(0, 0, 0, 20)
        Icon.BackgroundTransparency = 1
        Icon.Text = "‚ö†Ô∏è CONNECTION LOST"
        Icon.TextColor3 = Color3.fromRGB(255, 255, 255)
        Icon.Font = Enum.Font.GothamBold
        Icon.TextSize = 32
        Icon.Parent = DisconnectPanel
        
        -- Main message
        local Message = Instance.new("TextLabel")
        Message.Size = UDim2.new(1, -40, 0, 60)
        Message.Position = UDim2.new(0, 20, 0, 110)
        Message.BackgroundTransparency = 1
        Message.Text = "You have been disconnected from the server"
        Message.TextColor3 = Color3.fromRGB(255, 255, 255)
        Message.Font = Enum.Font.Gotham
        Message.TextSize = 18
        Message.TextWrapped = true
        Message.TextYAlignment = Enum.TextYAlignment.Top
        Message.Parent = DisconnectPanel
        
        -- Auto reconnect info
        local AutoInfo = Instance.new("TextLabel")
        AutoInfo.Size = UDim2.new(1, -40, 0, 40)
        AutoInfo.Position = UDim2.new(0, 20, 0, 180)
        AutoInfo.BackgroundTransparency = 1
        AutoInfo.Text = "üîÑ Auto Reconnecting in 3 seconds..."
        AutoInfo.TextColor3 = Color3.fromRGB(100, 255, 100)
        AutoInfo.Font = Enum.Font.GothamBold
        AutoInfo.TextSize = 16
        AutoInfo.Parent = DisconnectPanel
        
        -- Manual reconnect button
        local ReconnectBtn = Instance.new("TextButton")
        ReconnectBtn.Size = UDim2.new(0, 200, 0, 40)
        ReconnectBtn.Position = UDim2.new(0.5, -100, 0, 230)
        ReconnectBtn.BackgroundColor3 = Color3.fromRGB(0, 170, 0)
        ReconnectBtn.Text = "üîÑ Reconnect Now"
        ReconnectBtn.TextColor3 = Color3.fromRGB(255, 255, 255)
        ReconnectBtn.Font = Enum.Font.GothamBold
        ReconnectBtn.TextSize = 16
        ReconnectBtn.Parent = DisconnectPanel
        
        local BtnCorner = Instance.new("UICorner")
        BtnCorner.CornerRadius = UDim.new(0, 8)
        BtnCorner.Parent = ReconnectBtn
        
        -- Auto reconnect countdown
        local countdown = 3
        local countdownConnection
        countdownConnection = RunService.Heartbeat:Connect(function()
            countdown = countdown - (1/60)
            if countdown > 0 then
                AutoInfo.Text = string.format("üîÑ Auto Reconnecting in %.1f seconds...", countdown)
            else
                countdownConnection:Disconnect()
                -- Auto reconnect
                pcall(function()
                    TeleportService:Teleport(game.PlaceId, player)
                end)
            end
        end)
        
        -- Manual reconnect
        ReconnectBtn.MouseButton1Click:Connect(function()
            if countdownConnection then countdownConnection:Disconnect() end
            pcall(function()
                TeleportService:Teleport(game.PlaceId, player)
            end)
        end)
        
        return ScreenGui
    end
    
    -- Monitor connection status
    local lastHeartbeat = tick()
    local heartbeatConnection
    
    heartbeatConnection = RunService.Heartbeat:Connect(function()
        lastHeartbeat = tick()
    end)
    
    -- Check for disconnection
    task.spawn(function()
        while true do
            task.wait(1)
            
            -- Check if heartbeat stopped (sign of disconnect)
            if tick() - lastHeartbeat > 5 and not disconnectDetected then
                disconnectDetected = true
                print("üîå Disconnect detected!")
                
                -- Create disconnect GUI
                createDisconnectGUI()
                break
            end
        end
    end)
    
    -- Handle game events that might indicate disconnect
    game:GetService("CoreGui").ChildRemoved:Connect(function(child)
        if child.Name == "RobloxPromptGui" or child.Name == "RobloxGui" then
            if not disconnectDetected then
                disconnectDetected = true
                task.wait(1)
                createDisconnectGUI()
            end
        end
    end)
    
    -- Handle teleport/rejoin events
    TeleportService.TeleportInitFailed:Connect(function(player, teleportResult, errorMessage)
        print("‚ùå Teleport failed:", errorMessage)
        if not disconnectDetected then
            disconnectDetected = true
            createDisconnectGUI()
        end
    end)
end

-- Loading Screen
local function createLoadingScreen()
    print("Step 2: Creating loading screen...")
    local ScreenGui = Instance.new("ScreenGui")
    ScreenGui.Name = "WanerLoading"
    ScreenGui.ResetOnSpawn = false
    ScreenGui.Parent = game.CoreGui
    
    local Blur = Instance.new("BlurEffect")
    Blur.Size = 0
    Blur.Parent = game.Lighting
    
    local Background = Instance.new("Frame")
    Background.Size = UDim2.new(1, 0, 1, 0)
    Background.BackgroundColor3 = Color3.fromRGB(10, 10, 15)
    Background.BackgroundTransparency = 1
    Background.Parent = ScreenGui
    
    local Container = Instance.new("Frame")
    Container.Size = UDim2.new(0, 450, 0, 220)
    Container.Position = UDim2.new(0.5, -225, 0.5, -110)
    Container.BackgroundColor3 = Color3.fromRGB(20, 20, 30)
    Container.BackgroundTransparency = 1
    Container.Parent = ScreenGui
    
    local Corner = Instance.new("UICorner")
    Corner.CornerRadius = UDim.new(0, 15)
    Corner.Parent = Container
    
    local Title = Instance.new("TextLabel")
    Title.Size = UDim2.new(1, 0, 0, 60)
    Title.Position = UDim2.new(0, 0, 0, 30)
    Title.BackgroundTransparency = 1
    Title.Text = "WENER HUB"
    Title.TextColor3 = Color3.fromRGB(139, 0, 255)
    Title.Font = Enum.Font.GothamBold
    Title.TextSize = 42
    Title.TextTransparency = 1
    Title.Parent = Container
    
    local Status = Instance.new("TextLabel")
    Status.Size = UDim2.new(1, 0, 0, 30)
    Status.Position = UDim2.new(0, 0, 0, 100)
    Status.BackgroundTransparency = 1
    Status.Text = "Initializing Auto Execute System..."
    Status.TextColor3 = Color3.fromRGB(200, 200, 200)
    Status.Font = Enum.Font.Gotham
    Status.TextSize = 16
    Status.TextTransparency = 1
    Status.Parent = Container
    
    local Progress = Instance.new("Frame")
    Progress.Size = UDim2.new(0.8, 0, 0, 6)
    Progress.Position = UDim2.new(0.1, 0, 0, 150)
    Progress.BackgroundColor3 = Color3.fromRGB(139, 0, 255)
    Progress.BorderSizePixel = 0
    Progress.Parent = Container
    
    local ProgressCorner = Instance.new("UICorner")
    ProgressCorner.CornerRadius = UDim.new(1, 0)
    ProgressCorner.Parent = Progress
    
    -- Animation with fade effect
    task.spawn(function()
        -- Fade in
        TweenService:Create(Blur, TweenInfo.new(0.5), {Size = 20}):Play()
        TweenService:Create(Background, TweenInfo.new(0.5), {BackgroundTransparency = 0.3}):Play()
        TweenService:Create(Container, TweenInfo.new(0.5), {BackgroundTransparency = 0.1}):Play()
        wait(0.5)
        TweenService:Create(Title, TweenInfo.new(0.3), {TextTransparency = 0}):Play()
        TweenService:Create(Status, TweenInfo.new(0.3), {TextTransparency = 0}):Play()
        wait(0.5)
        
        -- Loading stages with fade
        local stages = {
            "Setting up Auto Execute...",
            "Configuring Auto Reconnect...", 
            "Loading Main Features...",
            "Complete!"
        }
        
        for i, stage in ipairs(stages) do
            -- Fade out current text
            TweenService:Create(Status, TweenInfo.new(0.2), {TextTransparency = 1}):Play()
            wait(0.2)
            
            -- Change text and fade in
            Status.Text = stage
            TweenService:Create(Status, TweenInfo.new(0.2), {TextTransparency = 0}):Play()
            TweenService:Create(Progress, TweenInfo.new(0.8), {Size = UDim2.new(0.8 * (i/4), 0, 0, 6)}):Play()
            wait(0.8)
        end
        
        wait(0.5)
        
        -- Fade out everything
        TweenService:Create(Title, TweenInfo.new(0.4), {TextTransparency = 1}):Play()
        TweenService:Create(Status, TweenInfo.new(0.4), {TextTransparency = 1}):Play()
        TweenService:Create(Container, TweenInfo.new(0.4), {BackgroundTransparency = 1}):Play()
        TweenService:Create(Background, TweenInfo.new(0.4), {BackgroundTransparency = 1}):Play()
        TweenService:Create(Blur, TweenInfo.new(0.5), {Size = 0}):Play()
        wait(0.6)
        
        Blur:Destroy()
        ScreenGui:Destroy()
    end)
    print("Step 2: Loading screen with fade created!")
end

-- Setup systems first
setupAutoExecute()
setupAutoReconnect()
pcall(createLoadingScreen)
wait(4)

print("Step 3: Auto systems initialized!")

-- Key System
local KeySystemEnabled = true
local CorrectKey = "Wene-you"

local function checkKey()
    local success, data = pcall(function()
        return game:GetService("HttpService"):JSONDecode(readfile("WanerHubKey.json"))
    end)
    if success and data and data.key == CorrectKey then
        return true
    end
    return false
end

local function saveKey()
    writefile("WanerHubKey.json", game:GetService("HttpService"):JSONEncode({key = CorrectKey, time = os.time()}))
end

local ownerUsername = "winnertupiq52"
local isOwner = player.Name == ownerUsername

if KeySystemEnabled and not checkKey() then
    print("Key required...")
    local ScreenGui = Instance.new("ScreenGui")
